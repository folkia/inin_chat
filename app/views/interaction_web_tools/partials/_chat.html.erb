<div class='chat'>
  <div class='chat-controls'>
    <%= link_to t(:customer_service), '#', class: 'chat-start' %>
    <%= link_to '&times;'.html_safe, '#', class: 'chat-stop' %>
  </div>

  <div class='chat-body'>
    <div class='chat-messages'>
    </div>

    <%= form_tag nil, class: 'chat-message-form' do %>
      <%= text_field_tag 'content', nil, class: 'chat-message-input' %>
    <% end %>
  </div>
</div>
